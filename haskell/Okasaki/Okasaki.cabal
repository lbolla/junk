name:                Okasaki
version:             0.1.0.0
synopsis:            Data structures found in Okasaki's "Purely Functional Data Structures"
-- description:         
homepage:            http://lbolla.info/
-- license:             
license-file:        LICENSE
author:              Lorenzo Bolla
maintainer:          lbolla@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules: Stack
                 , Set
                 , FiniteMap
                 , Heap
  -- other-modules:       
  build-depends:       base == 4.5.*
  hs-source-dirs:      src
  ghc-options:         -Wall -Werror

test-suite okasaki-test
    build-depends: base -any
                 , QuickCheck -any
                 , HUnit -any
                 , test-framework -any
                 , test-framework-hunit -any
                 , test-framework-quickcheck2 -any
    type: exitcode-stdio-1.0
    main-is: OkasakiTester.hs
    buildable: True
    hs-source-dirs: src
